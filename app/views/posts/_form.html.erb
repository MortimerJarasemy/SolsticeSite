<%= form_for @post do |f| %>
	<%if @post.errors.any? %>
	<h2><%= pluralize(@post.errors.count,"error")%> this post couldn't be saved </h2>
		<ul><%@post.errors.full_message.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	<%= f.label :title %><br>
	<%= f.text_field :title %>

	<br><br>

	<%= f.label :content, "put a description" %><br>
	<%= f.text_area :content %>

	<br><br>

	<%= f.label :theme %><br>
	<%= f.text_field :theme %>

	<br><br>

	<%= f.submit %>

<% end %>
